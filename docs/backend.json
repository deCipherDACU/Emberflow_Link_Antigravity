{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user within the LifeQuest RPG application.",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the User entity." },
        "username": { "type": "string", "description": "The user's chosen username for the app." },
        "email": { "type": "string", "description": "The user's email address.", "format": "email" },
        "createdAt": { "type": "string", "description": "Timestamp indicating when the user account was created.", "format": "date-time" },
        "lastLogin": { "type": "string", "description": "Timestamp of the user's last login.", "format": "date-time" }
      },
      "required": ["id", "username", "email", "createdAt", "lastLogin"]
    },
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserProfile",
      "type": "object",
      "description": "Stores user profile information, including character details and settings.",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the UserProfile entity." },
        "displayName": { "type": "string", "description": "The user's display name within the app." },
        "avatarUrl": { "type": "string", "description": "URL or reference to the user's avatar image." },
        "gender": { "type": "string", "enum": ["male", "female", "other", "prefer-not-to-say"] },
        "mbti": { "type": "string", "description": "User's MBTI personality type." },
        "level": { "type": "number", "description": "The user's current level in the game." },
        "xp": { "type": "number", "description": "The user's current experience points." },
        "xpToNextLevel": { "type": "number" },
        "health": { "type": "number" },
        "maxHealth": { "type": "number" },
        "coins": { "type": "number", "description": "The number of coins the user has." },
        "gems": { "type": "number", "description": "The number of gems the user has (premium currency)." },
        "skillPoints": { "type": "number" },
        "streak": { "type": "number" },
        "longestStreak": { "type": "number" },
        "tasksCompleted": { "type": "number" },
        "completionRate": { "type": "number" },
        "memberSince": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "displayName", "avatarUrl", "level", "xp", "coins", "gems"]
    },
    "SkillTree": {
      "title": "SkillTree",
      "type": "object",
      "properties": {
        "name": { "type": "string", "enum": ["Physical", "Mental", "Life Skills"] },
        "description": { "type": "string" },
        "skills": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "level": { "type": "number" },
              "maxLevel": { "type": "number" },
              "description": { "type": "string" },
              "cost": { "type": "number" }
            },
            "required": ["name", "level", "maxLevel", "cost"]
          }
        }
      }
    },
    "Item": {
      "title": "Item",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "type": { "type": "string", "enum": ["Weapon", "Armor", "Helmet", "Shield", "Collectible"] },
        "bonus": { "type": "string" },
        "rarity": { "type": "string", "enum": ["Common", "Rare", "Epic", "Legendary"] }
      },
      "required": ["id", "name", "type", "rarity"]
    },
    "Equipment": {
      "title": "Equipment",
      "type": "object",
      "properties": {
        "weapon": { "$ref": "#/backend/entities/Item" },
        "armor": { "$ref": "#/backend/entities/Item" },
        "helmet": { "$ref": "#/backend/entities/Item" },
        "shield": { "$ref": "#/backend/entities/Item" }
      }
    },
    "Task": {
      "title": "Task",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "category": { "type": "string" },
        "difficulty": { "type": "string", "enum": ["Easy", "Medium", "Hard", "N/A"] },
        "type": { "type": "string", "enum": ["Daily", "Weekly", "Monthly", "One-time"] },
        "dueDate": { "type": "string", "format": "date-time" },
        "completed": { "type": "boolean" },
        "xp": { "type": "number" },
        "coins": { "type": "number" },
        "streak": { "type": "number" },
        "lastCompleted": { "type": "string", "format": "date-time" },
        "intention": { "type": "string" },
        "pomodoros": { "type": "number" },
        "pomodorosCompleted": { "type": "number" }
      },
      "required": ["id", "title", "category", "difficulty", "type", "completed", "xp", "coins"]
    },
    "Boss": {
      "title": "Boss",
      "type": "object",
      "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "type": { "type": "string" },
          "title": { "type": "string" },
          "imageUrl": { "type": "string" },
          "maxHp": { "type": "number" },
          "currentHp": { "type": "number" },
          "timeRemaining": { "type": "string" },
          "lastDefeated": { "type": "string" }
      }
    },
    "Dungeon": {
        "title": "Dungeon",
        "type": "object",
        "properties": {
            "id": { "type": "string" },
            "title": { "type": "string" },
            "description": { "type": "string" },
            "difficulty": { "type": "number" },
            "challenges": { 
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "id": { "type": "string" },
                        "title": { "type": "string" },
                        "completed": { "type": "boolean" }
                    },
                    "required": ["id", "title", "completed"]
                }
            },
            "completed": { "type": "boolean" },
            "xp": { "type": "number" },
            "startTime": { "type": "string", "format": "date-time" },
            "completionTime": { "type": "string", "format": "date-time" },
            "timeTaken": { "type": "number" }
        }
    },
    "JournalEntry": {
        "title": "JournalEntry",
        "type": "object",
        "properties": {
            "id": { "type": "string" },
            "date": { "type": "string", "format": "date-time" },
            "text": { "type": "string" },
            "imageUrl": { "type": "string" },
            "voiceUrl": { "type": "string" }
        },
        "required": ["id", "date"]
    },
    "WeeklyReview": {
        "title": "WeeklyReview",
        "type": "object",
        "properties": {
            "id": { "type": "string" },
            "date": { "type": "string", "format": "date-time" },
            "weekNumber": { "type": "number" },
            "year": { "type": "number" },
            "wins": { "type": "string" },
            "challenges": { "type": "string" },
            "learnings": { "type": "string" },
            "nextWeekGoals": { "type": "string" },
            "mood": { "type": "string", "enum": ["Great", "Good", "Okay", "Bad", "Awful"] }
        },
        "required": ["id", "date", "weekNumber", "year", "mood"]
    }
  },
  "auth": { "providers": ["password", "anonymous"] },
  "firestore": {
    "structure": [
      { "path": "/users/{userId}", "definition": { "entityName": "User", "schema": { "$ref": "#/backend/entities/User" } } },
      { "path": "/users/{userId}/profiles/{profileId}", "definition": { "entityName": "UserProfile", "schema": { "$ref": "#/backend/entities/UserProfile" } } },
      { "path": "/users/{userId}/skillTrees/{skillTreeId}", "definition": { "entityName": "SkillTree", "schema": { "$ref": "#/backend/entities/SkillTree" } } },
      { "path": "/users/{userId}/inventory/{itemId}", "definition": { "entityName": "Item", "schema": { "$ref": "#/backend/entities/Item" } } },
      { "path": "/users/{userId}/equipment/{equipmentId}", "definition": { "entityName": "Equipment", "schema": { "$ref": "#/backend/entities/Equipment" } } },
      { "path": "/users/{userId}/tasks/{taskId}", "definition": { "entityName": "Task", "schema": { "$ref": "#/backend/entities/Task" } } },
      { "path": "/users/{userId}/bosses/{bossId}", "definition": { "entityName": "Boss", "schema": { "$ref": "#/backend/entities/Boss" } } },
      { "path": "/users/{userId}/dungeons/{dungeonId}", "definition": { "entityName": "Dungeon", "schema": { "$ref": "#/backend/entities/Dungeon" } } },
      { "path": "/users/{userId}/journal/{entryId}", "definition": { "entityName": "JournalEntry", "schema": { "$ref": "#/backend/entities/JournalEntry" } } },
      { "path": "/users/{userId}/reviews/{reviewId}", "definition": { "entityName": "WeeklyReview", "schema": { "$ref": "#/backend/entities/WeeklyReview" } } }
    ]
  }
}
